<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.fretboard.controller.MainController"
            stylesheets="@../css/styles.css">
    
    <!-- Menu Bar -->
    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="File">
                <MenuItem text="New" onAction="#handleNewFile" accelerator="Ctrl+N"/>
                <MenuItem text="Open..." onAction="#handleOpenFile" accelerator="Ctrl+O"/>
                <SeparatorMenuItem/>
                <MenuItem text="Save" onAction="#handleSaveFile" accelerator="Ctrl+S"/>
                <MenuItem text="Save As..." onAction="#handleSaveFileAs" accelerator="Ctrl+Shift+S"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit" onAction="#handleExit" accelerator="Alt+F4"/>
            </Menu>
            <Menu text="Edit">
                <MenuItem text="Settings..." onAction="#handleSettings" accelerator="Ctrl+,"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>
    
    <!-- Left Sidebar - Module List -->
    <left>
        <VBox fx:id="moduleListPane" styleClass="module-sidebar" spacing="5" minWidth="200" prefWidth="220">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Training Modules" styleClass="sidebar-title"/>
            <Separator/>
        </VBox>
    </left>
    
    <!-- Center - Main Content Area -->
    <center>
        <BorderPane fx:id="contentPane" styleClass="content-pane">
            <center>
                <VBox alignment="CENTER" spacing="20">
                    <Label text="Welcome to Fretboard Memorization Workshop" styleClass="welcome-title"/>
                    <Label text="Select a training module from the sidebar to begin" styleClass="welcome-subtitle"/>
                    <Label text="Configure your guitar input in Settings (Ctrl+,)" styleClass="welcome-hint"/>
                </VBox>
            </center>
        </BorderPane>
    </center>
    
    <!-- Bottom - Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>